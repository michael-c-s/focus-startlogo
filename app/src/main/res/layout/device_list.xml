<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_paired_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scan_device_border_design"
        android:gravity="start|center"
        android:paddingStart="@dimen/margin_4dp"
        android:paddingTop="@dimen/margin_8dp"
        android:paddingEnd="@dimen/margin_8dp"
        android:paddingBottom="@dimen/margin_8dp"
        android:text="Paired Devices"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_size_16sp"
        android:visibility="gone"
        tools:ignore="RtlSymmetry" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_1dp"
        android:background="@color/grey" />

    <ListView
        android:id="@+id/paired_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:drawSelectorOnTop="true"
        android:stackFromBottom="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_1dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/title_new_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scan_device_border_design"
        android:gravity="start|center"
        android:paddingStart="@dimen/margin_4dp"
        android:paddingTop="@dimen/margin_8dp"
        android:paddingEnd="@dimen/margin_8dp"
        android:paddingBottom="@dimen/margin_8dp"
        android:text="Other Available Devices"
        android:textColor="@color/blackColor"
        android:textSize="@dimen/txt_size_16sp"
        android:visibility="gone"
        tools:ignore="RtlSymmetry" />

    <ListView
        android:id="@+id/new_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="2"
        android:stackFromBottom="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_1dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_scan"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_36dp"
            android:layout_weight="1"
            android:background="@drawable/scan_device_border_design"
            android:text="@string/button_scan"
            android:textAllCaps="false"
            android:textColor="@color/blackColor" />

        <View
            android:layout_width="@dimen/border_1dp"
            android:layout_height="match_parent"
            android:background="@color/colorRed" />

        <Button
            android:id="@+id/dismissBtn_ids"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_36dp"
            android:layout_weight="1"
            android:background="@drawable/scan_device_border_design"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/blackColor" />

    </LinearLayout>

</LinearLayout>