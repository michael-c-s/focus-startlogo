<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0">

    <TableRow>

        <TextView
            android:id="@+id/fb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/margin_4dp"
            android:singleLine="true"
            android:text="File Browser"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/fb_usethisdirbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:adjustViewBounds="true"
            android:gravity="end"
            android:src="@drawable/usethisfolder" />

        <ImageButton
            android:id="@+id/fb_upbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="15"
            android:adjustViewBounds="true"
            android:gravity="end"
            android:maxWidth="@dimen/margin_56dp"
            android:maxHeight="@dimen/margin_56dp"
            android:src="@drawable/up" />

    </TableRow>

</TableLayout>