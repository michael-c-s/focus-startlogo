<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pic"
    android:fillViewport="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48dp"
        android:background="@color/colorBlack">

        <ImageView
            android:id="@+id/quizBack_ids"
            android:layout_width="@dimen/margin_48dp"
            android:layout_height="@dimen/margin_48dp"
            android:padding="@dimen/margin_10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Assessment"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_18sp" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_8dp"
            android:paddingEnd="@dimen/margin_8dp">

            <LinearLayout
                android:id="@+id/adjCompWidthsLay_ids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comprehensionWidthText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="Adjust comprehension widths:"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_size_18sp"
                    android:visibility="visible" />

                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:max="1900"
                    android:maxHeight="@dimen/margin_24dp"
                    android:minHeight="@dimen/margin_24dp"
                    android:progress="300"
                    android:progressBackgroundTint="@color/light_grey"
                    android:progressTint="@color/colorRed"
                    android:thumb="@drawable/ic_progress"
                    android:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/fontWidthText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="Adjust font size:"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/txt_size_18sp"
                android:visibility="visible" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_8dp"
                android:max="500"
                android:maxHeight="@dimen/margin_24dp"
                android:minHeight="@dimen/margin_24dp"
                android:progress="101"
                android:progressBackgroundTint="@color/light_grey"
                android:progressTint="@color/colorRed"
                android:thumb="@drawable/ic_progress" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="236dp"
                android:layout_marginTop="@dimen/margin_8dp"
                app:cardCornerRadius="@dimen/margin_8dp"
                app:cardElevation="@dimen/margin_8dp">

                <HorizontalScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_2dp"
                    android:gravity="center_vertical|top">

                    <LinearLayout
                        android:id="@+id/scrollViewLL"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_2dp" />

                </HorizontalScrollView>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnPrint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_36dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:background="@drawable/btn_border_white2"
                android:foreground="@drawable/my_ripple"
                android:text="@string/btnSend"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor" />

            <FrameLayout
                android:id="@+id/language1Lay_ids"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_36dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:background="@drawable/btn_border_white2"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/language1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </FrameLayout>

            <Spinner
                android:id="@+id/language2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnRerandomize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_36dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:background="@drawable/btn_border_white2"
                android:foreground="@drawable/my_ripple"
                android:text="@string/btnRerandomize"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor" />

            <Button
                android:id="@+id/btnOtherAssessment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_36dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:background="@drawable/btn_border_white2"
                android:foreground="@drawable/my_ripple"
                android:text="@string/btnDoAnotherAssessment"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor" />

            <Button
                android:id="@+id/btnRecordResults"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_36dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:background="@drawable/btn_border_white"
                android:foreground="@drawable/my_ripple"
                android:text="@string/btnRecordResults"
                android:textAllCaps="false"
                android:textColor="@color/black" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>