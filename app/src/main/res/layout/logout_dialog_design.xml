<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_24dp"
    android:background="@drawable/bg_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/margin_16dp">

    <TextView
        android:id="@+id/msgTv_ids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:gravity="center_horizontal"
        android:text="Are you sure want to logout?"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_size_18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/okTv_ids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp"
            android:background="@drawable/btn_border_red"
            android:gravity="center"
            android:padding="@dimen/margin_8dp"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            android:text="OK"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_16sp" />

        <TextView
            android:id="@+id/cancelTv_ids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp"
            android:background="@drawable/btn_border_white2"
            android:gravity="center"
            android:padding="@dimen/margin_8dp"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            android:text="Cancel"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_size_16sp" />

    </LinearLayout>

</LinearLayout>
