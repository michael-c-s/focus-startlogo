<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/itemtext"
        style="?android:attr/dropDownItemStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_56dp"
        android:paddingStart="@dimen/margin_12dp"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_4dp"
        android:paddingEnd="@dimen/margin_4dp"
        android:paddingRight="@dimen/margin_4dp"
        android:paddingBottom="@dimen/margin_4dp"
        android:scrollHorizontally="true"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/txt_size_14sp" />

</LinearLayout>